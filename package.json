{
  "name": "vp-preview",
  "displayName": "VitePress Preview",
  "description": "Use vscode builtin simple browser to preview VitePress pages.",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Jerry wang <x.jerry.wang@gmail.com>",
  "publisher": "fantasy",
  "repository": {
    "type": "git",
    "url": "https://github.com/0x-jerry/vscode-vitepress"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "vitepress",
    "live server"
  ],
  "extensionPack": [
    "vscode.simple-browser"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "browser": "./dist/extension.js",
  "extensionKind": [
    "workspace"
  ],
  "contributes": {
    "configuration": {
      "title": "VitePress",
      "properties": {
        "vp.host": {
          "scope": "window",
          "description": "VitePress devServer port.",
          "type": "number",
          "default": 4001
        },
        "vp.autoStart": {
          "scope": "window",
          "description": "start VitePress devServer when open workspace.",
          "type": "boolean",
          "default": false
        },
        "vp.baseDir": {
          "scope": "machine-overridable",
          "description": "VitePress docs folder, relative path to current workspace.",
          "type": "string",
          "default": ""
        }
      }
    },
    "commands": [
      {
        "title": "Start VitePress Preview",
        "command": "vp.preview.start",
        "category": "VitePress"
      },
      {
        "title": "Stop VitePress Preview",
        "command": "vp.preview.stop",
        "category": "VitePress"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsup",
    "build": "tsup",
    "dev": "tsup --watch",
    "publish": "vsce publish --no-dependencies",
    "release": "x-release --publish false"
  },
  "tsup": {
    "entry": [
      "src/extension.ts"
    ],
    "sourcemap": true,
    "clean": true,
    "external": [
      "vscode"
    ]
  },
  "devDependencies": {
    "@0x-jerry/utils": "^2.3.0",
    "@0x-jerry/x-release": "^2.2.2",
    "@types/node": "^20.12.12",
    "@types/vscode": "^1.60.0",
    "@vscode/vsce": "^2.26.1",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  }
}